{{setPageTitle "Walima"}}
{{setActiveNav "walima"}}
{{setYUIModule "le-walima"}}
{{setDescription "The details of Zainab Zahra’s & Ahmed Jafri’s walima."}}
{{addCSS "/css/details.css"}}
{{addCSS "/css/walima.css"}}

<div id="map" lat="47.6062" long="-122.3321" zoom="12"></div>

<div class="l-wrap">
    <h1 class="ann">
        <span class="ann-secondary">Walima</span>
        <span class="ann-primary">June 5, 2018</span>
        <span class="ann-secondary">Seattle, WA</span>
    </h1>

    <ol class="cal l-contain l-grid">
        {{#day "Saturday 5" primary=true}}
            {{addDayEvent "ceremony"
                start = "5:30pm"
                desc  = "Walima Ceremony"}}

            {{addDayEvent "ceremony"
                start = "6pm"
                end   = "10pm"
                desc  = "Reception"}}

            {{> day/header}}
            {{> day/events}}
        {{/day}}

        {{#day "Sunday 6"}}
            {{addDayEvent "brunch"
                start = "11am"
                end   = "1pm"
                desc  = "Informal Brunch Buffet"}}

            {{> day/header}}
            {{> day/events}}
        {{/day}}
    </ol>

    <div class="l-contain">
        <ul class="travel-nav l-grid">
            <li class="travel-nav-item l-grid-u">
                <a class="button" data-icon="p" href="/logistics/">Get There</a>
            </li>
            <li class="travel-nav-item l-grid-u">
                <a class="button" data-icon="b" href="/logistics/hotels/">Stay There</a>
            </li>
        </ul>
    </div>

    <div class="details l-contain">
        <h2 id="ceremony" class="anchored-header">
            Ceremony &amp; Reception
        </h2>

        <div class="details-group l-grid">
            <div class="l-grid-u">
                <p class="details-content">
                    The walima ceremony will begin, <em>promptly</em>, on <b>Saturday at 5:30pm</b>. The ceremony and reception will be held at...:
                </p>
            </div>

            <div class="l-grid-u">
                <address class="details-content">
                    <a href="http://maps.apple.com/?q=8290+Ingleton+Circle+Easton,+MD+21601">
                        <b>Address Title</b><br>
                        Street add<br>
                        Seattle, WA 98011
                    </a>
                </address>
            </div>
        </div>

        <h2 id="brunch" class="anchored-header">
            Informal Brunch Buffet
        </h2>

        <p>
            An informal brunch buffet will be served at the home of Hasan and Rubina on <b>Sunday morning</b>. Stop by anytime between 11am - 1pm, before you head out of town.
        </p>
        <p>
            We would appreciate if you would RSVP, <em>regrets only</em>, <a href="/rsvp/brunch/">if you <em>won't</em> be attending the brunch</a>.
        </p>
    </div>
</div>
